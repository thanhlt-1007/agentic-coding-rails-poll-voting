# =============================================================================
# RAILS POLL VOTING - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
POLL_VOTING_DATABASE_HOST=localhost
POLL_VOTING_DATABASE_PORT=5432
POLL_VOTING_DATABASE_USERNAME=postgres
POLL_VOTING_DATABASE_PASSWORD=Aa@123456

# For Render.com: DATABASE_URL is automatically provided
# Format: postgres://username:password@host:port/database
# DATABASE_URL=postgres://poll_voting:password@localhost:5432/poll_voting_production

# -----------------------------------------------------------------------------
# Rails Configuration
# -----------------------------------------------------------------------------
# RAILS_ENV=development
# RAILS_LOG_LEVEL=debug
# RAILS_MAX_THREADS=5

# Rails master key for encrypted credentials
# Run: rails credentials:edit to generate
# RAILS_MASTER_KEY=your_master_key_here

# Secret key base (auto-generated in production via credentials)
# For development, Rails generates this automatically
# SECRET_KEY_BASE=your_secret_key_base_here

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# PORT=3000
# WEB_CONCURRENCY=2
# RAILS_SERVE_STATIC_FILES=false

# For production with SSL
# RAILS_ASSUME_SSL=true
# RAILS_FORCE_SSL=true

# -----------------------------------------------------------------------------
# Application URLs
# -----------------------------------------------------------------------------
# Development
# APP_HOST=localhost:3000
# APP_URL=http://localhost:3000

# Production (update with your Render.com domain)
# APP_HOST=your-app.onrender.com
# APP_URL=https://your-app.onrender.com

# For Action Mailer
# ACTION_MAILER_DEFAULT_HOST=localhost:3000
# ACTION_MAILER_DEFAULT_HOST=your-app.onrender.com

# -----------------------------------------------------------------------------
# Email Configuration (SMTP)
# -----------------------------------------------------------------------------
# SMTP_ADDRESS=smtp.gmail.com
# SMTP_PORT=587
# SMTP_DOMAIN=example.com
# SMTP_USERNAME=your_email@example.com
# SMTP_PASSWORD=your_email_password
# SMTP_AUTHENTICATION=plain
# SMTP_ENABLE_STARTTLS_AUTO=true

# -----------------------------------------------------------------------------
# Redis Configuration (for caching, session store)
# -----------------------------------------------------------------------------
# Development (local Redis)
# REDIS_URL=redis://localhost:6379/0

# For Render.com: REDIS_URL is automatically provided
# REDIS_URL=redis://red-xxxxx:6379

# -----------------------------------------------------------------------------
# Solid Queue Configuration (Background Jobs)
# -----------------------------------------------------------------------------
# SOLID_QUEUE_ON_THREAD_ERROR=report
# SOLID_QUEUE_CONNECTS_TO_DATABASE=queue

# -----------------------------------------------------------------------------
# Active Storage Configuration
# -----------------------------------------------------------------------------
# ACTIVE_STORAGE_SERVICE=local
# For S3/cloud storage in production:
# ACTIVE_STORAGE_SERVICE=amazon
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# AWS_BUCKET=your-bucket-name

# -----------------------------------------------------------------------------
# Security & Rate Limiting
# -----------------------------------------------------------------------------
# Rack Attack throttle limits
# RACK_ATTACK_LIMIT=5
# RACK_ATTACK_PERIOD=60

# Trusted proxy IPs (for Render.com)
# TRUSTED_PROXY_IPS=

# -----------------------------------------------------------------------------
# Performance & Monitoring
# -----------------------------------------------------------------------------
# Enable performance monitoring
# RAILS_PERFORMANCE_MONITORING=true

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# New Relic License Key
# NEW_RELIC_LICENSE_KEY=your_license_key

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
# FEATURE_POLLS_ENABLED=true
# FEATURE_REAL_TIME_RESULTS=true

# -----------------------------------------------------------------------------
# Development Tools
# -----------------------------------------------------------------------------
# Disable Spring in development if needed
# DISABLE_SPRING=1

# Bullet N+1 detection
# BULLET_ENABLED=true

# Query log tags
# QUERY_LOG_TAGS_ENABLED=true

# -----------------------------------------------------------------------------
# Testing
# -----------------------------------------------------------------------------
# Parallel test workers
# PARALLEL_WORKERS=4

# Selenium browser for system tests
# SELENIUM_BROWSER=chrome
# SELENIUM_HEADLESS=true

# -----------------------------------------------------------------------------
# Render.com Specific (automatically provided)
# -----------------------------------------------------------------------------
# DATABASE_URL - PostgreSQL connection string
# REDIS_URL - Redis connection string
# RENDER - Set to 'true' when running on Render
# RENDER_INSTANCE_ID - Unique instance identifier
# RENDER_SERVICE_NAME - Service name
# RENDER_GIT_COMMIT - Git commit SHA
# RENDER_GIT_BRANCH - Git branch name
