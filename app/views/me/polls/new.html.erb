<div class="max-w-2xl mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6"><%= t('.title') %></h1>

  <% if @poll.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <h2 class="text-red-800 font-semibold mb-2">
        <%= pluralize(@poll.errors.count, "error") %> prohibited this poll from being saved:
      </h2>
      <ul class="list-disc list-inside text-red-700">
        <% @poll.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @poll, url: me_polls_path, class: "space-y-6" do |form| %>
    <div>
      <%= form.label :question, t('.question_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_area :question, 
          rows: 3,
          placeholder: t('.question_placeholder'),
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
    </div>

    <div>
      <%= form.label :deadline, t('.deadline_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.datetime_local_field :deadline,
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      <p class="mt-1 text-sm text-gray-500"><%= t('.deadline_help') %></p>
    </div>

    <div>
      <h3 class="block text-sm font-medium text-gray-700 mb-3"><%= t('.answers_header') %></h3>
      
      <%= form.fields_for :answers do |answer_form| %>
        <div class="mb-3">
          <%= answer_form.label :text, "#{t('.answer_label')} #{answer_form.index + 1}", class: "block text-sm font-medium text-gray-600 mb-1" %>
          <%= answer_form.text_field :text,
              placeholder: t('.answer_placeholder'),
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <%= answer_form.hidden_field :position, value: answer_form.index + 1 %>
        </div>
      <% end %>
    </div>

    <div class="flex gap-4">
      <%= form.submit t('.submit_button'), 
          class: "px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
    </div>
  <% end %>
</div>
