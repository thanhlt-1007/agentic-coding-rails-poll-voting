<div class="max-w-2xl mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-md p-6">
    <h1 class="text-2xl font-bold mb-4"><%= @poll.question %></h1>
    
    <% if @poll.deadline.present? %>
      <p class="text-gray-600 mb-4">
        <span class="font-medium">Deadline:</span>
        <%= @poll.deadline.strftime("%B %d, %Y at %I:%M %p") %>
      </p>
    <% end %>

    <div class="mt-6">
      <h2 class="text-lg font-semibold mb-3">Answer Options:</h2>
      <ul class="space-y-2">
        <% @poll.answers.order(:position).each do |answer| %>
          <% vote_count = answer.user_answers.count %>
          <li class="flex items-center justify-between p-3 border border-gray-200 rounded-lg">
            <div class="flex items-center">
              <span class="w-8 h-8 flex items-center justify-center bg-blue-100 text-blue-600 rounded-full mr-3 font-medium">
                <%= answer.position %>
              </span>
              <%= answer.text %>
            </div>
            <span class="ml-4 text-sm font-medium text-gray-600">
              <%= vote_count %> <%= vote_count == 1 ? 'vote' : 'votes' %>
            </span>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="mt-6 text-sm text-gray-500">
      Created <%= time_ago_in_words(@poll.created_at) %> ago
    </div>
  </div>
</div>
