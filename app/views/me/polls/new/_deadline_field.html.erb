<div>
  <%= form.label :deadline, t('.deadline_label'), class: "block text-sm font-medium text-gray-700 mb-2" %>
  <%= form.datetime_local_field :deadline,
      class: "w-full px-4 py-2 border rounded-lg focus:ring-2 #{form.object.errors[:deadline].any? ? 'border-red-500 focus:ring-red-500 focus:border-red-500' : 'border-gray-300 focus:ring-blue-500 focus:border-blue-500'}" %>
  <% if form.object.errors[:deadline].any? %>
    <p class="mt-1 text-sm text-red-600"><%= form.object.errors[:deadline].first %></p>
  <% else %>
    <p class="mt-1 text-sm text-gray-500"><%= t('.deadline_help') %></p>
  <% end %>
</div>
