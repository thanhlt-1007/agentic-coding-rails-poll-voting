<div class="mb-3">
  <%= answer_form.label :text, "#{t('.answer_label')} #{answer_form.index + 1}", class: "block text-sm font-medium text-gray-600 mb-1" %>
  <%= answer_form.text_field :text,
      placeholder: t('.answer_placeholder'),
      class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  <%= answer_form.hidden_field :position, value: answer_form.index + 1 %>
</div>
