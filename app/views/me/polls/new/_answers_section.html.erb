<div>
  <h3 class="block text-sm font-medium text-gray-700 mb-3"><%= t('.answers_header') %></h3>
  
  <% if form.object.errors[:base].any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-3 mb-3">
      <% form.object.errors[:base].each do |error| %>
        <p class="text-sm text-red-600"><%= error %></p>
      <% end %>
    </div>
  <% end %>
  
  <%= form.fields_for :answers do |answer_form| %>
    <%= render "me/polls/new/answer_field", answer_form: answer_form %>
  <% end %>
</div>
