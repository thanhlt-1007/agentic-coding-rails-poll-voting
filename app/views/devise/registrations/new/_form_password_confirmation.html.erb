<div>
  <%= f.label :password_confirmation, class: "block text-sm font-semibold text-gray-700 mb-1" %>
  <div class="relative">
    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
      <svg class="h-5 w-5 <%= field_icon_color(resource, :password_confirmation) %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
      </svg>
    </div>
    <%= f.password_field :password_confirmation, 
        autocomplete: "new-password",
        class: "block w-full pl-10 pr-3 py-2.5 border #{field_border_classes(resource, :password_confirmation)} rounded-lg text-gray-900 placeholder-gray-400 focus:outline-none transition duration-150 ease-in-out sm:text-sm",
        placeholder: t('.password_confirmation_placeholder') %>
  </div>
  <%= field_error_message(resource, :password_confirmation) %>
</div>
