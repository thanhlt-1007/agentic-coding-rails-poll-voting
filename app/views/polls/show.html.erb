<div class="max-w-2xl mx-auto p-6">
  <div class="bg-white rounded-lg shadow-lg p-8">
    <h1 class="text-3xl font-bold mb-4"><%= @poll.question %></h1>
    
    <div class="mb-6 p-4 bg-blue-50 border border-blue-200 rounded-lg">
      <p class="text-sm text-blue-800 font-semibold mb-2">Share this poll:</p>
      <div class="flex gap-2">
        <input type="text" value="<%= shareable_poll_url(@poll) %>" readonly class="flex-1 px-3 py-2 bg-white border border-blue-300 rounded text-sm" />
        <button class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition text-sm font-semibold">Copy</button>
      </div>
    </div>

    <% if @poll.active? %>
      <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
        <p class="text-sm text-green-800">
          <span class="font-semibold">Status:</span> Active
          <span class="ml-4"><span class="font-semibold">Deadline:</span> <%= @poll.deadline.strftime("%B %d, %Y at %I:%M %p") %></span>
        </p>
      </div>

      <% if @participant_voted %>
        <div class="mb-6 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
          <p class="text-sm text-yellow-800 font-semibold">You have already voted on this poll</p>
        </div>
      <% else %>
        <%= render "votes/form", poll: @poll, vote: @vote %>
      <% end %>
    <% else %>
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
        <p class="text-sm text-red-800 font-semibold">This poll is closed.</p>
      </div>
    <% end %>

    <div class="mt-8 flex gap-4">
      <%= link_to "Create Another Poll", new_poll_path, class: "px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-semibold" %>
    </div>
  </div>
</div>

