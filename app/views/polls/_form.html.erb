<%= form_with(model: poll, data: { controller: "poll-form" }) do |f| %>
  <% if poll.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
      <h2 class="text-red-800 font-semibold mb-2"><%= pluralize(poll.errors.count, "error") %> prohibited this poll from being saved:</h2>
      <ul class="list-disc list-inside text-red-700">
        <% poll.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-6">
    <%= f.label :question, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_area :question, rows: 3, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "What would you like to ask?" %>
  </div>

  <div class="mb-6">
    <%= f.label :deadline, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.datetime_field :deadline, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
  </div>

  <div class="mb-6">
    <label class="block text-sm font-medium text-gray-700 mb-3">Choices (minimum 2)</label>
    <div data-poll-form-target="choicesContainer">
      <%= f.fields_for :choices do |choice_fields| %>
        <div class="flex gap-2 mb-3" data-poll-form-target="choiceField">
          <%= choice_fields.text_field :text, class: "flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Enter choice" %>
          <%= choice_fields.hidden_field :position %>
          <%= choice_fields.hidden_field :_destroy %>
          <button type="button" data-action="click->poll-form#removeChoice" class="px-4 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition">Remove</button>
        </div>
      <% end %>
    </div>
    <button type="button" data-action="click->poll-form#addChoice" class="mt-2 px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition">+ Add Choice</button>
  </div>

  <div class="mb-6 flex items-center">
    <%= f.check_box :show_results_while_voting, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
    <%= f.label :show_results_while_voting, "Show results while voting is active", class: "ml-2 text-sm text-gray-700" %>
  </div>

  <div class="flex gap-4">
    <%= f.submit "Create Poll", class: "px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition font-semibold" %>
    <%= link_to "Cancel", root_path, class: "px-6 py-3 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition font-semibold" %>
  </div>
<% end %>
